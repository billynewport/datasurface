def find_existing_factory_dags():
    """
    Find all DAGs in globals() that were previously created by this ingestion factory.
    Uses naming convention to identify regular ingestion DAGs and excludes DataTransformer DAGs.
    Pattern: {{ platform_name }}__*_ingestion (but NOT *_dt_ingestion or *_datatransformer)
    """
    factory_dags = {}
    platform_prefix = "{{ platform_name }}__"
    
    for name, obj in globals().items():
        if (name.startswith(platform_prefix) and 
            name.endswith("_ingestion") and 
            not name.endswith("_dt_ingestion") and  # Exclude DataTransformer output DAGs
            not name.endswith("_datatransformer") and  # Exclude DataTransformer execution DAGs
            hasattr(obj, 'dag_id')):
            factory_dags[name] = obj
    
    return factory_dags

def sync_dynamic_dags(**context):
    """
    Task that synchronizes dynamic DAGs with database configuration.
    Implements full DAG lifecycle management: create, update, and delete.
    """
    task_instance = context['task_instance']
    
    try:
        task_instance.log.info("=" * 80)
        task_instance.log.info("ğŸ­ FACTORY DAG EXECUTION - Dynamic DAG Lifecycle Management")
        task_instance.log.info(f"ğŸ“ Platform: {{ platform_name }}")
        task_instance.log.info("=" * 80)
        
        # Step 1: Find existing factory DAGs
        task_instance.log.info("ğŸ” Scanning for existing factory-managed DAGs...")
        existing_dags = find_existing_factory_dags()
        task_instance.log.info(f"   Found {len(existing_dags)} existing DAGs from previous factory runs")
        
        # Step 2: Load current configurations from database
        task_instance.log.info("ğŸ“Š Loading current configurations from database...")
        current_dags = load_platform_configurations()
        task_instance.log.info(f"   Found {len(current_dags)} active configurations in database")
        
        # Handle special case: no active configs but existing DAGs need cleanup
        if not current_dags and existing_dags:
            task_instance.log.warning("")
            task_instance.log.warning("âš ï¸  SPECIAL CASE: No active configurations but existing DAGs found")
            task_instance.log.warning("   â†’ All existing factory DAGs will be removed")
            task_instance.log.warning("   â†’ This cleans up zombie DAGs from previous configurations")
        
        # Step 3: Calculate lifecycle changes
        existing_dag_ids = set(existing_dags.keys())
        current_dag_ids = set(current_dags.keys())
        
        to_create = current_dag_ids - existing_dag_ids
        to_remove = existing_dag_ids - current_dag_ids  
        to_update = current_dag_ids & existing_dag_ids
        
        task_instance.log.info("")
        task_instance.log.info("ğŸ“‹ LIFECYCLE ANALYSIS:")
        task_instance.log.info(f"   ğŸ†• To Create: {len(to_create)} DAGs")
        task_instance.log.info(f"   ğŸ—‘ï¸  To Remove: {len(to_remove)} DAGs") 
        task_instance.log.info(f"   ğŸ”„ To Update: {len(to_update)} DAGs")
        
        # Step 4: Execute lifecycle changes
        task_instance.log.info("")
        task_instance.log.info("=" * 60)
        task_instance.log.info("ğŸ”„ EXECUTING DAG LIFECYCLE CHANGES")
        task_instance.log.info("=" * 60)
        
        # Remove obsolete DAGs
        removed_dags = []
        if to_remove:
            task_instance.log.info("ğŸ—‘ï¸  REMOVING OBSOLETE DAGs:")
            for dag_id in to_remove:
                if dag_id in globals():
                    del globals()[dag_id]
                    removed_dags.append(dag_id)
                    task_instance.log.info(f"   ğŸ—‘ï¸  REMOVED: {dag_id}")
                    task_instance.log.info(f"      â†’ No longer in database configuration")
        else:
            task_instance.log.info("ğŸ—‘ï¸  No DAGs to remove")
        
        # Create new DAGs  
        created_dags = []
        if to_create:
            task_instance.log.info("")
            task_instance.log.info("ğŸ†• CREATING NEW DAGs:")
            for dag_id in to_create:
                globals()[dag_id] = current_dags[dag_id]
                created_dags.append(dag_id)
                task_instance.log.info(f"   âœ… CREATED: {dag_id}")
                task_instance.log.info(f"      â†’ New configuration found in database")
        else:
            task_instance.log.info("ğŸ†• No new DAGs to create")
        
        # Update existing DAGs
        updated_dags = []
        if to_update:
            task_instance.log.info("")
            task_instance.log.info("ğŸ”„ UPDATING EXISTING DAGs:")
            for dag_id in to_update:
                globals()[dag_id] = current_dags[dag_id]
                updated_dags.append(dag_id)
                task_instance.log.info(f"   ğŸ”„ UPDATED: {dag_id}")
                task_instance.log.info(f"      â†’ Configuration refreshed from database")
        else:
            task_instance.log.info("ğŸ”„ No DAGs to update")
        
        # Final summary
        task_instance.log.info("")
        task_instance.log.info("=" * 60)
        task_instance.log.info("ğŸ“‹ FACTORY DAG LIFECYCLE SUMMARY")
        task_instance.log.info("=" * 60)
        
        if removed_dags:
            task_instance.log.info("ğŸ—‘ï¸  REMOVED DAGS:")
            for dag_id in removed_dags:
                task_instance.log.info(f"   â†’ {dag_id}")
        
        if created_dags:
            task_instance.log.info("âœ… CREATED DAGS:")
            for dag_id in created_dags:
                task_instance.log.info(f"   â†’ {dag_id}")
        
        if updated_dags:
            task_instance.log.info("ğŸ”„ UPDATED DAGS:")
            for dag_id in updated_dags:
                task_instance.log.info(f"   â†’ {dag_id}")
        
        total_changes = len(removed_dags) + len(created_dags) + len(updated_dags)
        task_instance.log.info("")
        task_instance.log.info(f"ğŸ“Š TOTAL CHANGES: {total_changes}")
        task_instance.log.info(f"ğŸ“Š ACTIVE DAGS: {len(current_dags)} (after lifecycle management)")
        task_instance.log.info("")
        task_instance.log.info("ğŸ’¡ All DAGs are now synchronized with database configuration")
        task_instance.log.info("ğŸ’¡ Obsolete DAGs have been removed to prevent zombie DAGs")
        task_instance.log.info("ğŸ’¡ Dynamic DAGs are available in the Airflow UI")
        task_instance.log.info("=" * 80)
        
        summary = f"âœ… Lifecycle complete: -{len(removed_dags)} +{len(created_dags)} ~{len(updated_dags)} = {len(current_dags)} active DAGs"
        return summary
        
    except Exception as e:
        task_instance.log.error("=" * 80)
        task_instance.log.error("âŒ FACTORY DAG EXECUTION FAILED")
        task_instance.log.error("=" * 80)
        task_instance.log.error(f"ğŸ’¥ Error: {str(e)}")
        task_instance.log.error(f"ğŸ”§ Error Type: {type(e).__name__}")
        task_instance.log.error("")
        task_instance.log.error("ğŸ” Troubleshooting steps:")
        task_instance.log.error("   1. Check database connectivity")
        task_instance.log.error("   2. Verify {{ platform_name }}_airflow_dsg table exists")
        task_instance.log.error("   3. Check environment variables are set")
        task_instance.log.error("   4. Review scheduler pod logs for more details")
        task_instance.log.error("=" * 80)
        
        # Re-raise to mark task as failed
        error_msg = f"âŒ Factory DAG failed: {str(e)}"
        raise Exception(error_msg)

